# Cipher Clash V2.0 - Environment Variables
# Copy this file to .env and update with your values
# Never commit .env to version control!

# Database Configuration
DATABASE_URL=postgres://postgres:password@localhost:5432/cipher_clash?sslmode=disable
DB_MAX_OPEN_CONNS=100
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=1h

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:password@localhost:5672/cipher_clash

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-in-production-min-32-chars
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=168h

# Server Configuration
PORT=8080
HOST=0.0.0.0
ENVIRONMENT=development

# Service-Specific Ports
AUTH_SERVICE_PORT=8080
MATCHMAKER_PORT=8081
PUZZLE_ENGINE_PORT=8082
GAME_SERVICE_PORT=8083

# Logging
LOG_LEVEL=INFO

# CORS (for development)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_LOGIN_ATTEMPTS=5

# Security
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true
PASSWORD_MIN_LENGTH=8

# Production Settings (uncomment for production)
# ENVIRONMENT=production
# LOG_LEVEL=WARN
# ENABLE_CORS=false
# DATABASE_SSL_MODE=require
